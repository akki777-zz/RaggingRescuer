<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/back1"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/allround"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:paddingTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/allround2"
                android:orientation="vertical"
                android:padding="2dp">

                <EditText
                    android:id="@+id/etName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:layout_marginEnd="-2dp"
                    android:layout_marginStart="-2dp"
                    android:layout_marginTop="-2dp"
                    android:background="@drawable/edittext_top_bg"
                    android:drawableLeft="@drawable/ic_action_person"
                    android:drawableStart="@drawable/ic_action_person"
                    android:hint="Name"
                    android:inputType="textNoSuggestions"
                    android:padding="10dp"
                    android:textColorHint="#bbbbbb" />


                <EditText
                    android:id="@+id/etPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-2dp"
                    android:layout_marginEnd="-2dp"
                    android:layout_marginStart="-2dp"
                    android:layout_marginTop="-0.25dp"
                    android:background="@drawable/edittext_default_bg"
                    android:drawableLeft="@drawable/ic_action_call"
                    android:drawableStart="@drawable/ic_action_call"
                    android:hint="Phone Number"
                    android:inputType="phone"
                    android:padding="10dp"
                    android:textColorHint="#bbbbbb" />

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:layout_marginEnd="-2dp"
                    android:layout_marginStart="-2dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/edittext_default_bg"
                    android:drawableLeft="@drawable/ic_action_email"
                    android:drawableStart="@drawable/ic_action_email"
                    android:hint="Email"
                    android:inputType="textWebEmailAddress"
                    android:padding="10dp"
                    android:textColorHint="#bbbbbb" />

                <AutoCompleteTextView
                    android:id="@+id/act"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-2dp"
                    android:layout_marginEnd="-2dp"
                    android:layout_marginStart="-2dp"
                    android:layout_marginTop="-0.25dp"
                    android:background="@drawable/edittext_bottom_bg"
                    android:drawableLeft="@drawable/ic_action_place"
                    android:drawableStart="@drawable/ic_action_place"
                    android:hint="College name"
                    android:padding="10dp"
                    android:textColorHint="#bbbbbb" />
            </LinearLayout>


            <Button
                android:id="@+id/btnSingIn"
                style="@style/DefaultButtonText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:background="@drawable/button_default_bg"
                android:onClick="Submit"
                android:text="Register" />
        </LinearLayout>
    </RelativeLayout>

</ScrollView>
